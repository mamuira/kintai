<p id="notice"><%= notice %></p>

<h1>Listing Kintais</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>開始時間</th>
      <th>終了時間</th>
      <th>研究時間</th>
      <th>目的</th>
      <th>反省</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kintais.each do |kintai| %>
      <tr>
        <td><%= kintai.date %></td>
        <td><%= kintai.start_time %></td>
        <td><%= kintai.finish_time %></td>
				<td><%= (kintai.finish_time - kintai.start_time) / 60 %></td>
        <td><%= kintai.purpose %></td>
        <td><%= kintai.reflection %></td>
        <td><%= link_to 'Show', kintai %></td>
        <td><%= link_to 'Edit', edit_kintai_path(kintai) %></td>
        <td><%= link_to 'Destroy', kintai, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kintai', new_kintai_path %>

<p>
  Download:
  <%= link_to "CSV", kintais_path(format: "csv") %>
  
  <%= link_to "Excel", kintais_path(format: "xls") %>
  
</p>
